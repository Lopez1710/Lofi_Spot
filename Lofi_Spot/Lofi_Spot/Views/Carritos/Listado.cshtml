<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Carrito.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>


</head>
<body>
    
    <table class="table table-hover" style="margin-top: 50px">
        <thead>
            <tr>
                <th>producto</th>
                <th>cantidad</th>
                <th>precio</th>
                <th>total</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ls)
            {
                <tr>
                    <td>@item.Producto.Producto</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Producto.Precio</td>
                    <td></td>
                    <td><form action="/Carritos/EliminarP/@item.CarritoID" method="post"><input type="submit" class="btn-danger" value="Eliminar del carrito" /></form></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>total</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    @if (ViewBag.CB == 1)
    {
        <h3>No tienes productos en tu carrito.</h3>
    }
    <br />
    <a class="btn btn-success" href="/Carritos/RealizarCompra">Realizar Compra</a>
    <a class="btn btn-success" href="/Producto/ProductoCarrusel">Regresar</a>
    <br />
    <a href="/Usuario/Terminos">Terminos y condiciones</a>
    <script src="/js/script.js"></script>

</body>