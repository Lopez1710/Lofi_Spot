
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Productos.css">
    <title>Inicio</title>
</head>

<body>
    <header>
        <div class="main__cont" id="inicio">
            <nav class="menu">
                <section class="menu__container">

                    <ul class="menu__links">
                        <li class="menu__logo"><img class="menu__logo__img" src="./img/LofiSpot (1).png" alt=""></li>

                        <li class="menu__item">
                            <a href="#" class="menu__link">Home</a>
                        </li>
                        <li class="menu__item">
                            <a href="#" class="menu__link">Contact</a>
                        </li>

                        <li class="menu__item">
                            <a href="#" class="menu__link">Categoria <img src="~/assets/arrow.svg" class="menu__arrow"></a>

                            <ul class="menu__nesting">
                                @foreach (var item in ViewBag.Categoria)
                                {
                                    <li class="menu__inside">
                                        <a href="/Producto/ProductoGeneral/@item.CategoriaID" class="menu__link menu__link--inside">@item.Categoria</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <div class="menu__others">
                        <div class="menu__item__user">
                            <div class="menu__user"></div>

                            <ul class="menu__nesting__user">
                                <li class="menu__inside__user">
                                    <div href="#" class="menu__link__nameusu menu__link__nameusu--inside">Nombre usu</div>
                                </li>
                                <li class="separador__nombreusu"></li>
                                <li class="menu__inside">
                                    <a href="#" class="menu__link__user menu__link__user--inside">Informacion de cuenta</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </section>
            </nav>
        </div>
    </header>

    <div class="cont__icon">
        <a href="ProductPage.html" class="pic">
            <img src="~/assets/car.svg" class="caricon__ico">

        </a>
    </div>
    @foreach (var cat in ViewBag.Categoria)
    {
        <div class="Carousel">
            <h2>@cat.Categoria</h2>
            <div class="slick-list" id="slick-list">
                <button class="slick-arrow slick-prev" id="button-prev" data-button="button-prev"
                        onclick="app.processingButton(event)">
                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left"
                         class="svg-inline--fa fa-chevron-left fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 320 512">
                        <path fill="currentColor"
                              d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z">
                        </path>
                    </svg>
                </button>

                @foreach (var pro in ViewBag.Producto)
                {
                    if (pro.CategoriaID == cat.CategoriaID)
                    {
                        <div class="slick-track" id="track">
                            <div class="slick">
                                <div>
                                    <a>
                                        <h4><small>@pro.Producto </small></h4>
                                        <picture>
                                            <img src=@pro.Imagenes alt="Image">
                                        </picture>
                                        <a href="/Producto/ProductoEspesificacion/@pro.ProductoID" class="slick-link">Ver más</a>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }
                }
                <button class="slick-arrow slick-next" id="button-next" data-button="button-next"
                        onclick="app.processingButton(event)">
                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right"
                         class="svg-inline--fa fa-chevron-right fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 320 512">
                        <path fill="currentColor"
                              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z">
                        </path>
                    </svg>
                </button>
            </div>
        </div>
    }
    <div class="separadorCarrouselFooter"></div>
    <footer>
        <div class="footer__link">
            <a href="#inicio" class="footer__inicio">Inicio de página</a>
        </div>
        <div class="footer__container">
            <div class="separador__contact"></div>
            <span class="footer__Contact">Contacto</span>
            <div class="separador__contact"></div>
            <span class="footer__span"><a href="mailto:lofispots@gmail.com" class="footer__a">LofiSpots@gmail.com</a></span>
            <div class="separador__contact"></div>
            <span class="footer__span">7645-2343</span>
            <div class="separador__contact"></div>
            <div class="footer__SocialNetwork">
                <a href="https://www.facebook.com/profile.php?id=100074944750786" target="_blank"><img src="./img/facebook.png" class="footer__icon"></a>

                <a href="mailto:lofispots@gmail.com"><img src="/img/gmail-logo.png" class="footer__icon"></a>
            </div>
            <div class="separador__contact"></div>
        </div>
    </footer>
    <script defer src="~/js/main.js"></script>
</body>
</html>

