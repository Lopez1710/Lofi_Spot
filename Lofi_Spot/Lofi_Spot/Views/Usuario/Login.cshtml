
<link rel="stylesheet" href="./css/EstLogin.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<body>
    <nav class="menu">
        <section class="menu__container">

            <h1 class="menu__logo">LofiSpot</h1>
            <h2 class="menu__topic">Login</h2>


            <ul class="menu__links">
                <li class="menu__item">
                    <a href="#" class="menu__link">Home</a>
                </li>

                <li class="menu__item">
                    <a href="#" class="menu__link">Sign in</a>
                </li>
            </ul>

        </section>
    </nav>
    <div class="contenedor">
        @using (Html.BeginForm("Usuario", "Login", FormMethod.Post))
        {
            <div class="form__header">
                <h1 class="form__h1logo"><img src="./assets/user.svg" class="form__imgicon"> </h1>
            </div>

            <div class="form__input__cont">
                <div class="form__img__div">
                    <img src="./assets/user2.svg" alt="" class="form__logoin">
                </div>
                <div class="form__img__div__Relleno"></div>
                <input type="text" name="User" class="form__input" placeholder="User">
            </div>

            <div class="form__input__cont">
                <div class="form__img__div form__img__div2">
                    <img src="./assets/lock.svg" alt="" class="form__logoin">
                </div>
                <div class="form__img__div__Relleno"></div>
                <input type="text" name="Pass" class="form__input" placeholder="Password">
            </div>

            <label class="form-check-label form__label form__label__check">
                <input class="form-check-input" type="checkbox" id="form__checkid"> Visible password
            </label>

            <input type="submit" class="form__button" value="Enter">
        }
    </div>
</body>