
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/EstRegistro.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Registro</title>
</head>

<body>
    <nav class="menu">
        <section class="menu__container">

            <h1 class="menu__logo">LofiSpot</h1>
            <h2 class="menu__topic">Registry</h2>

            <ul class="menu__links">
                <li class="menu__item">
                    <a href="#" class="menu__link">Home</a>
                </li>

                <li class="menu__item">
                    <a href="/Usuario/Login" class="menu__link">Login</a>
                </li>
            </ul>

        </section>
    </nav>
    <div class="contenedor">
        <form action="/Usuario/Registro" method="post" class="form">

            <div class="form__header">
                <h1 class="form__h1logo"><img src="/assets/user.svg" class="form__imgicon"> </h1>
            </div>

            <div class="form__input__cont">
                <div class="form__img__div">
                    <img src="/assets/lapiz.svg" alt="" class="form__logoin">
                </div>

                <div class="form__img__div__Relleno"></div>
                <input type="text" name="Nick" class="form__input" placeholder="Nick name" required>
                @if (ViewBag.nick == 2)
                {
                    <label class="text-white">Nombre ya registrado proeva uno diferente</label>
                }
            </div>

            <div class="form__input__cont">
                <div class="form__img__div">
                    <img src="/assets/user2.svg" alt="" class="form__logoin">
                </div>

                <div class="form__img__div__Relleno"></div>
                <input type="text" name="Email" class="form__input" placeholder="Email" required>
                @if(ViewBag.email == 1)
                          {
                    <label class="text-white">Correo ya registrado prueva uno diferente</label>
                          }
            </div>

            <div class="form__input__cont">
                <div class="form__img__div form__img__div2">
                    <img src="/assets/lock.svg" alt="" class="form__logoin">
                </div>

                <div class="form__img__div__Relleno"></div>
                <input type="text" name="Pass" class="form__input" placeholder="Password" required>
            </div>

            <label class="form-check-label form__label form__label__check">
                <input class="form-check-input" type="checkbox" id="form__checkid"> Visible password
            </label>

            <input type="submit" class="form__button" value="Sign in">

        </form>
    </div>
</body>

</html>
